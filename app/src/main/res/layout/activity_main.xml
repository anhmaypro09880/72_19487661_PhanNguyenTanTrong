<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="509dp"
        android:layout_height="183dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backgr_up" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="432dp"
        android:layout_height="131dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/backgr_lower" />


    <RelativeLayout
        android:layout_width="329dp"
        android:layout_height="55dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/blue_border_rounded_cornwe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">
        <!--INPUT-->

        <EditText
            android:id="@+id/edtTenCongV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:background="@android:color/transparent"

            android:hint="TÃªn"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:paddingLeft="17dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textCursorDrawable="@drawable/cursor_color"
            tools:ignore="DuplicateClickableBoundsCheck" />

        <ImageView
            android:id="@+id/usernam"
            android:layout_width="25.7dp"
            android:layout_height="21.3dp"

            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:src="@drawable/email" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="329dp"
        android:layout_height="55dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/blue_border_rounded_cornwe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">
        <!--INPUT-->

        <EditText
            android:id="@+id/edtMucDo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:background="@android:color/transparent"

            android:hint="Password"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:paddingLeft="17dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textCursorDrawable="@drawable/cursor_color"
            tools:ignore="DuplicateClickableBoundsCheck" />

        <ImageView
            android:id="@+id/usernam2"
            android:layout_width="25.7dp"
            android:layout_height="21.3dp"

            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:src="@drawable/password" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnThemCongV"
        android:layout_width="221dp"
        android:layout_height="51dp"
        android:layout_marginTop="276dp"
        android:background="@drawable/color_button"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>